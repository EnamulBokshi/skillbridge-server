generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id String @id @default(uuid())
  name String 
  slug String
  slot_price Int
  subject Subject[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("category")
  
}


model Subject{
  sub_id String @id @default(uuid())
  name String @db.Text
  credit_hours Float
  categoryId String
  category  Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  slot_price Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("subject")
}