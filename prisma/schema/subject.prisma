model Subject {
    id String @id @default(uuid())
    name String @db.Text
    creditHours Float
    categoryId String
    category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
    slotPrice Int

    tutorSubject TutorSubject[]
    bookings Booking[]
    isActive Boolean

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("subject")
}
