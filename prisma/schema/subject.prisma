model Subject {
    id           String   @id @default(uuid())
    name         String   @db.Text
    credit_hours Float
    categoryId   String
    category     Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
    slot_price   Int

    tutorSub    TutorSubject[]
    bookings    Booking[]

    isActive Boolean

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    @@map("subject")
}
