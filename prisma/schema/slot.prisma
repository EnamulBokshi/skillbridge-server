model Slot{
    id String @id @default(uuid())
    
    date DateTime
    startTime DateTime
    endTime DateTime
    isBooked Boolean
    bookings Booking[]
    tutorId String
    tutorProfile TutorProfile @relation(fields: [tutorId], references: [id], onDelete: Cascade) 

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([id, tutorId])
    @@map("slots")
}
